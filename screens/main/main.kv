<main>:
    MDFloatLayout:
        md_bg_color: 1,1,1,1

        Image:
            source: "assets/main.png"
            size_hint: .65,.65
            pos_hint: {"center_x":.5, "center_y":.75}
        
        MDLabel:
            text: "Hello!"
            font_name: "fonts/Poppins/Poppins-Bold.ttf"
            pos_hint: {"center_y":.5}
            halign: "center"
            font_size: "30sp"
        MDLabel:
            text: "You can read all news with Olra!"
            font_name: "fonts/Poppins/Poppins-Medium.ttf"
            pos_hint: {"center_y":.45}
            halign: "center"
            font_size: "14sp"
        MDLabel:
            text: "Log in to continue!"
            font_name: "fonts/Poppins/Poppins-Medium.ttf"
            pos_hint: {"center_y":.42}
            halign: "center"
            font_size: "14sp"

        Button:
            text: "Log In"
            background_color: 0,0,0,0
            pos_hint: {"center_x":.5, "center_y": .30}
            font_size: "14sp"
            size_hint: 0.65, 0.065
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "loginup"
            canvas.before:
                Color:
                    rgb: rgba(190,23,4,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Sign In"
            color: 0.7450980392156863,0.0901960784313725,0.0156862745098039,1
            background_color: 0,0,0,0
            pos_hint: {"center_x":.5, "center_y": .20}
            font_size: "14sp"
            size_hint: 0.65, 0.065
            
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(190,23,4,1)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100